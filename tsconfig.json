{
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": false,
    "target": "ES2022",
    "verbatimModuleSyntax": true,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": true
  }
}
